<?xml version="1.0"?>
<object name="portal_controlpanel" 
    meta_type="Plone Control Panel Tool"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n" 
    i18n:domain="collective.routes">

    <configlet title="Lockdown" action_id="lockdown"
        appId="wildcard.lockdown" category="Products" condition_expr=""
        url_expr="string:${portal_url}/@@lockdown-settings"
        icon_expr="string:${portal_url}/++resource++lockdown.png"
        visible="True" i18n:attributes="title">
        <permission>Manage portal</permission>
    </configlet>

</object>
